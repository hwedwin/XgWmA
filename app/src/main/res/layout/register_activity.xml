<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/logo_height"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/logo"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/login_tv_height"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register"
                    android:layout_marginLeft="@dimen/login_tv_left"
                    android:textSize="@dimen/sp50"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_account"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp20"
                    android:layout_marginLeft="@dimen/dp10"
                    />
                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login"
                    android:textColor="@color/sky_blue"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp20"
                    android:layout_marginLeft="@dimen/dp5"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp15"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/real_name"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp18"
                    android:inputType="textPersonName"
                    android:layout_marginLeft="@dimen/login_tv_left"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginLeft="@dimen/dp6"
                    android:textColor="@color/deep_red"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp18"
                    />
                <EditText
                    android:id="@+id/et_real_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp6"
                    android:layout_marginBottom="@dimen/dp6"
                    android:layout_marginLeft="@dimen/dp6"
                    android:layout_marginRight="@dimen/dp10"
                    android:background="@drawable/person_center_middle_line"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp15"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/set_password"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp18"
                    android:layout_marginLeft="@dimen/login_tv_left"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginLeft="@dimen/dp6"
                    android:textColor="@color/deep_red"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp18"
                    />
                <EditText
                    android:id="@+id/et_set_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp6"
                    android:layout_marginBottom="@dimen/dp6"
                    android:layout_marginLeft="@dimen/dp6"
                    android:layout_marginRight="@dimen/dp10"
                    android:inputType="textPassword"
                    android:background="@drawable/person_center_middle_line"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp15"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/confirm_password"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp18"
                    android:layout_marginLeft="@dimen/login_tv_left"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginLeft="@dimen/dp6"
                    android:textColor="@color/deep_red"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp18"
                    />
                <EditText
                    android:id="@+id/et_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp6"
                    android:layout_marginBottom="@dimen/dp6"
                    android:layout_marginLeft="@dimen/dp6"
                    android:layout_marginRight="@dimen/dp10"
                    android:inputType="textPassword"
                    android:background="@drawable/person_center_middle_line"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp15"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp18"
                    android:layout_marginLeft="@dimen/login_tv_left"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginLeft="@dimen/dp6"
                    android:textColor="@color/deep_red"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp18"
                    />
                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp6"
                    android:layout_marginBottom="@dimen/dp6"
                    android:layout_marginLeft="@dimen/dp6"
                    android:layout_marginRight="@dimen/dp10"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/person_center_middle_line"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp15"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp18"
                    android:layout_marginLeft="@dimen/login_tv_left"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginLeft="@dimen/dp6"
                    android:textColor="@color/deep_red"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp18"
                    />
                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp6"
                    android:layout_marginBottom="@dimen/dp6"
                    android:layout_marginLeft="@dimen/dp6"
                    android:layout_marginRight="@dimen/dp10"
                    android:inputType="phone"
                    android:background="@drawable/person_center_middle_line"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp15"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/id_card_number"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp18"
                    android:layout_marginLeft="@dimen/login_tv_left"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginLeft="@dimen/dp6"
                    android:textColor="@color/deep_red"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp18"
                    />
                <EditText
                    android:id="@+id/et_id_card_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp6"
                    android:layout_marginBottom="@dimen/dp6"
                    android:layout_marginLeft="@dimen/dp6"
                    android:layout_marginRight="@dimen/dp10"
                    android:background="@drawable/person_center_middle_line"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp15"
                android:gravity="center_vertical"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recommended_person"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp18"
                    android:layout_marginLeft="@dimen/login_tv_left"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginLeft="@dimen/dp6"
                    android:textColor="@color/deep_red"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp18"
                    />
                <EditText
                    android:id="@+id/et_recommended_person"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp6"
                    android:layout_marginBottom="@dimen/dp6"
                    android:inputType="phone"
                    android:layout_marginLeft="@dimen/dp6"
                    android:layout_marginRight="@dimen/dp10"
                    android:background="@drawable/person_center_middle_line"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp15"
                android:gravity="center_vertical"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recommended_person_phone"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp18"
                    android:layout_marginLeft="@dimen/login_tv_left"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginLeft="@dimen/dp6"
                    android:textColor="@color/deep_red"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp18"
                    />
                <EditText
                    android:id="@+id/et_recommended_person_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp6"
                    android:layout_marginBottom="@dimen/dp6"
                    android:inputType="phone"
                    android:layout_marginLeft="@dimen/dp6"
                    android:layout_marginRight="@dimen/dp10"
                    android:background="@drawable/person_center_middle_line"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp15"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/code"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp18"
                    android:layout_marginLeft="@dimen/login_tv_left"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginLeft="@dimen/dp6"
                    android:textColor="@color/deep_red"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp18"
                    />
                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="@dimen/register_code_width"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp6"
                    android:background="@drawable/person_center_middle_line"
                    />

                <ImageView
                    android:id="@+id/iv_code"
                    android:layout_width="@dimen/register_code_width"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp6"
                    android:layout_marginBottom="@dimen/dp6"
                    android:layout_marginLeft="@dimen/dp6"
                    android:background="@drawable/register_code_line"
                    />
                 <TextView
                     android:id="@+id/tv_code_prompt"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/code_prompt"
                     android:textStyle="bold"
                     android:layout_marginLeft="@dimen/dp10"
                     android:textSize="@dimen/sp12"
                     android:layout_marginRight="@dimen/dp5"
                     android:textColor="@color/light_black"
                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp15"
                android:gravity="center_vertical"
                >
                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/login_tv_left"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp5"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp12"
                    android:textColor="@color/light_black"
                    android:text="@string/prompt"
                    />
                <TextView
                    android:id="@+id/tv_service_provision"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service_provision"
                    android:textColor="@color/sky_blue"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp12"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/and"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp12"
                    android:textColor="@color/light_black"
                    />
                <TextView
                    android:id="@+id/tv_privacy_policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_policy"
                    android:textColor="@color/sky_blue"
                    android:textStyle="bold"
                    android:layout_marginRight="@dimen/dp5"
                    android:textSize="@dimen/sp12"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/btn_register_immediately"
                android:layout_width="@dimen/login_btn_width"
                android:layout_height="@dimen/dp45"
                android:text="@string/register_immediately"
                android:layout_marginTop="@dimen/dp40"
                android:layout_gravity="center_horizontal"
                android:background="@color/sky_blue"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/dp40"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>